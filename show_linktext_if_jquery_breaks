    <script type="text/javascript">
    if(!window.jQuery) {
var bob = [];
function showNavText(matchClass)
    {
    var elems = document.getElementsByTagName('*'),i;
    for (i in elems)
        {
        if((" "+elems[i].className+" ").indexOf(" "+matchClass+" ") > -1)
            {
            var fix = elems[i].innerHTML.replace('>Click Here</A>', ' style="display:block !important">Click Here</A>'); 
            elems[i].innerHTML = fix;
            }
        }
    }
showNavText('support_button');    
}
$(document).ready(function() {
       $(".support_button").click(function(){ 
            window.location=$(this).find("a").attr("href");
            return false;
        });        
    });

    </script>
